<% include header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/admin/updateUser" method="post" enctype="multipart/form-data">
                <input type="hidden" name="_id" class="form-control" value="<%= data._id %>">
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">姓名</span>
                    <input type="text" name="name" class="form-control" value="<%= data.name %>">
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">年龄</span>
                    <input type="number" name="age" class="form-control" value="<%= data.age %>">
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">性别</span>
                    <div class="form-control">
                    <input type="radio" name="sex" value="1" <%= data.sex == 1? 'checked': ''%>>男
                    <input type="radio" name="sex" value="0" <%= data.sex == 0? 'checked': ''%>>女
                    </div>
                </div>
                 <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">学科</span>
                    <select name="subjectId" class="form-control">
                    <% subjectData.forEach(function(val){ %>
                        <option value="<%= val._id %>" <%= val._id == data.subjectId ? 'selected':'' %>><%= val.name %></option>
                    <% })%>
                    </select>
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">电话</span>
                   <input type="tel"  name="tel" class="form-control" placeholder="电话" value="<%= data.tel %>">
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">邮箱</span>
                    <input type="email" name="email" class="form-control" placeholder="邮箱" value="<%= data.email %>">
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">
                         <a href="/admin/editHead/<%=data._id%>"><img src="/<%= data.headpic %>" alt="" style="width:100px;height:100px;"></a>
                    </span>
                    
                    <input type="file" name="newheadpic" class="form-control" style="height:120px" >
                    <input type="hidden" name="headpic" class="form-control" value="<%= data.headpic %>">
                </div>

                <button type="submit" class="btn btn-default">提交</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>


<% include footer %>
 


