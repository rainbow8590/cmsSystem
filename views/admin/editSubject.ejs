<% include header %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
            <form action="/admin/updateSubject" method="post">
                <input type="hidden" name="_id" value="<%= data._id %>">
                <div class="form-group">
                    <input type="text" name="name" class="form-control" placeholder="姓名" value="<%= data.name %>">
                </div>
                <div class="form-group">
                    <textarea name="info" class="form-control"><%= data.info %></textarea>
                </div>
                <button type="submit" class="btn btn-default">提交</button>
            </form>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>


<% include footer %>
 


