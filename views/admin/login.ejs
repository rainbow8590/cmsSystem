<% include header_min %>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
        <div class="col-md-6">
                <h3>登录</h3>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">账户</span>
                    <input type="text" id="username" class="form-control">
                </div>
                <div class="input-group form-group">
                    <span class="input-group-addon" id="basic-addon1">密码</span>
                    <input type="password" id="password" class="form-control">
                </div>
                <button type="submit" class="btn btn-default" id="login">提交</button>
                <button type="submit" class="btn btn-default" id="reg">没有账号？去注册</button>
        </div>
        <div class="col-md-3"></div>
    </div>
</div>
<script>
$('#reg').click(function(){
    location.href = '/admin/reg';
})
$('#login').click(function(){
    $.ajax({
        url:'/admin/login',
        type:'post',
        data:{
            username:$('#username').val(),
            password:$('#password').val(),
        },
        success:function(res){
            alert(res)
            if(res == 'yes'){
                location.href = '/admin';
            }else{
                location.href = '/admin';
            }
        }
    })
})

</script>

